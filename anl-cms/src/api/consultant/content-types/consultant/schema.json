{
  "kind": "collectionType",
  "collectionName": "consultants",
  "info": {
    "singularName": "consultant",
    "pluralName": "consultants",
    "displayName": "Consultant"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "content": {
      "type": "richtext",
      "required": false
    },
    "consultantType": {
      "type": "enumeration",
      "enum": [
        "technical_consultant",
        "business_consultant",
        "agile_coach",
        "devops_specialist",
        "other"
      ]
    },
    "hide": {
      "type": "boolean",
      "default": false
    },
    "keywords": {
      "type": "string",
      "maxLength": 500
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "ctaUrl": {
      "type": "string",
      "maxLength": 1000
    },
    "order": {
      "type": "integer"
    },
    "video": {
      "type": "boolean",
      "default": false
    },
    "videoUrl": {
      "type": "text",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "video"
            },
            true
          ]
        }
      },
      "maxLength": 1000
    },
    "videoFile": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "video"
            },
            true
          ]
        }
      },
      "multiple": false,
      "allowedTypes": [
        "videos"
      ]
    }
  }
}
