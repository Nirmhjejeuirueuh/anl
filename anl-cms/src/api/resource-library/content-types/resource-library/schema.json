{
  "kind": "collectionType",
  "collectionName": "resource_libraries",
  "info": {
    "singularName": "resource-library",
    "pluralName": "resource-libraries",
    "displayName": "Resource Library"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "resourceType": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "video",
        "pdf",
        "article"
      ]
    },
    "videoUrl": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "resourceType"
            },
            "video"
          ]
        }
      },
      "required": false
    },
    "pdfUrl": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "resourceType"
            },
            "pdf"
          ]
        }
      },
      "required": false
    },
    "media": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "resourceType"
            },
            "pdf"
          ]
        }
      },
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "category": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "article": {
      "type": "richtext",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "resourceType"
            },
            "article"
          ]
        }
      }
    }
  }
}
