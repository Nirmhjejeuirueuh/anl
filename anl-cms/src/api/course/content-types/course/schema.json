{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "overview": {
      "type": "text",
      "required": true
    },
    "moduleCode": {
      "type": "string",
      "required": true
    },
    "trainingDays": {
      "type": "integer",
      "required": false,
      "min": 1
    },
    "schedule": {
      "type": "string",
      "required": true
    },
    "courseFamily": {
      "type": "string",
      "required": false
    },
    "learningObjectives": {
      "type": "text",
      "required": false
    },
    "targetAudience": {
      "type": "text",
      "required": false
    },
    "hyperlink": {
      "type": "string",
      "required": false
    },
    "popular": {
      "type": "boolean",
      "required": false,
      "default": false
    },
    "status": {
      "type": "enumeration",
      "required": false,
      "default": "enable",
      "enum": [
        "enable",
        "disable"
      ]
    }
  }
}
