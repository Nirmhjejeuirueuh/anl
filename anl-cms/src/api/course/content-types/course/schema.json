{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "icon": {
      "type": "string",
      "required": false
    },
    "category": {
      "type": "string",
      "required": false
    },
    "moduleCode": {
      "type": "string",
      "required": false
    },
    "trainingDays": {
      "type": "integer",
      "required": false,
      "min": 1
    },
    "duration": {
      "type": "string",
      "required": false
    },
    "instructor": {
      "type": "string",
      "required": false
    },
    "price": {
      "type": "decimal",
      "required": false,
      "min": 0
    },
    "maxParticipants": {
      "type": "integer",
      "required": false,
      "min": 1
    },
    "prerequisites": {
      "type": "text",
      "required": false
    },
    "learningObjectives": {
      "type": "text",
      "required": false
    },
    "targetAudience": {
      "type": "text",
      "required": false
    },
    "trainingTime": {
      "type": "string",
      "required": false
    },
    "trainingDate": {
      "type": "string",
      "required": false
    },
    "status": {
      "type": "enumeration",
      "enum": ["enable", "disable"],
      "default": "enable",
      "required": false
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": false
    }
  }
}