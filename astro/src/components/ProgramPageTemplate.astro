---
import Base from "@/layouts/Base.astro";
import PageHeader from "@/layouts/components/widgets/PageHeader.astro";
import ProgramsRibbon from "@/components/ProgramsRibbon.astro";
import CallToAction from "@/components/sections/CallToAction.astro";
import HtmlContentContainer from "@/components/HtmlContentContainer.astro";
import ProgramVideoModal from "@/components/utilities/ProgramVideoModal.astro";
import { STRAPI_URL } from "@/lib/strapiApi";
import { markdownify } from "@/lib/utils/textConverter";

interface Props {
  title: string;
  subtitle: string;
  metaDescription: string;
  description: string;
  programs: any[];
  basePath: string;
  label: string;
  lang?: string;
  currentSlug?: string;
}

const { title, subtitle, metaDescription, description, programs, basePath, label, lang, currentSlug } = Astro.props;
---

<Base title={title} metaDescription={metaDescription} draft={false}>
  { !currentSlug && <PageHeader title={title} subtitle={subtitle} /> }

  <!-- Programs Cards Section -->
  {currentSlug ? (
    <PageHeader title={title} subtitle={subtitle} />
    <!-- Programs Ribbon for Slug Pages -->
    <ProgramsRibbon
      programs={programs}
      currentSlug={currentSlug}
      basePath={basePath}
      label={label}
      lang={lang}
    />

    <!-- Individual Program Content Section -->
    <section class="relative">
      <div class="container">
        <HtmlContentContainer>
          {description && (
            <div set:html={markdownify(description, true)} />
          )}
        </HtmlContentContainer>
        
        <!-- Contact Button -->
        <div class="mt-8 text-center">
          <a 
            href={`${lang ? `/${lang}` : ''}/contact`}
            class="inline-flex items-center px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-primary/90 transition-colors duration-200 shadow-sm hover:shadow-md"
          >
            Contact us for more information
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  ) : (
    <!-- Description Section for Index Pages -->
    <section class="relative bg-theme-light">
      <div class="container">
        <div class="mx-auto max-w-5xl text-center pt-12">
          <!-- Description -->
          <div class="text-base md:text-lg text-gray-700 leading-relaxed space-y-4 mb-12 text-left" data-aos="fade-up-sm" data-aos-delay="200">
            {description.split('\n\n').map((paragraph: string) => (
              <p set:html={markdownify(paragraph)}></p>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Programs Ribbon -->
    <ProgramsRibbon
      programs={programs}
      currentSlug={currentSlug}
      basePath={basePath}
      label={label}
      lang={lang}
    />

    <!-- Programs Cards Section -->
    {programs && programs.length > 0 && (
      <section class="bg-theme-light">
        <div class="container">
          <div class="grid gap-8 md:grid-cols-2 lg:gap-12">
            {programs.map((program: any, index: number) => (
              <div
                data-aos="fade-up-sm"
                data-aos-delay={index * 200}
                class="group bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100">
                {program.image && (
                  <div class="aspect-[5/2] overflow-hidden">
                    <img
                      src={program.image.url.startsWith('http') ? program.image.url : `${STRAPI_URL}${program.image.url}`}
                      alt={program.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                )}
                <div class="p-8 md:p-10">
                  <h3 class="text-h4 text-primary mb-4">{program.title}</h3>
                  <div class="text-base md:text-lg text-gray-700 leading-relaxed text-left">
                    {program.description && (
                      <div set:html={markdownify(program.description, true)}></div>
                    )}
                  </div>
                  <div class="mt-6">
                    <a 
                      href={program.URL ? program.URL : `${lang ? `/${lang}` : ''}${basePath}/${program.slug}`}
                      data-video-url={program.URL ? program.URL : undefined}
                      data-video-title={program.URL ? program.title : undefined}
                      class="program-card-link inline-flex items-center text-primary font-medium hover:text-primary/80 transition-colors"
                    >
                      Learn More
                      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}
  )}

  <CallToAction />

  <ProgramVideoModal id="program-video-modal" />

  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      console.log('ProgramPageTemplate script loaded');
      console.log('window.openVideoModal available:', typeof window.openVideoModal);
      
      // Add click handlers to program card links
      const programCardLinks = document.querySelectorAll('.program-card-link');
      console.log('Found program card links:', programCardLinks.length);
      
      programCardLinks.forEach(link => {
        const videoUrl = link.getAttribute('data-video-url');
        if (videoUrl) {
          console.log('Link with video URL found:', videoUrl);
        }
        
        link.addEventListener('click', function(e) {
          const videoUrl = this.getAttribute('data-video-url');
          const videoTitle = this.getAttribute('data-video-title');
          
          console.log('Link clicked, videoUrl:', videoUrl, 'videoTitle:', videoTitle);
          
          // If it has a video URL, prevent default and open modal
          if (videoUrl) {
            e.preventDefault();
            console.log('Preventing default navigation');
            
            if (window.openVideoModal) {
              console.log('Calling window.openVideoModal');
              window.openVideoModal(videoUrl, videoTitle, 'program-video-modal');
            } else {
              console.error('window.openVideoModal not found!');
              // Fallback to opening in new tab
              window.open(videoUrl, '_blank');
            }
          }
          // Otherwise, let the link work normally
        });
      });
    });
  </script>
</Base>