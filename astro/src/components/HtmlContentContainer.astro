<div class="page-container">
  <slot />
</div>

<style is:global>
  .page-container {
    max-width: 960px;
    margin: 12px auto;
    padding: 40px 60px;
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  .page-container p {
    font-size: 20px;
    color: #555;
    line-height: 1.6;
    margin: 1em 0;
  }

  .page-container h2 {
    color: #BB1717;
    font-size: 1.75rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    border-bottom: 2px solid #eee;
    padding-bottom: 5px;
  }

  .page-container h3 {
    font-size: 1.4rem;
    font-weight: 600;
    color: #000;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .page-container img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 1.5rem auto;
    border-radius: 8px;
  }

  .page-container ul {
    font-size: 20px;
    color: #555;
    line-height: 1.6;
    padding-left: 25px;
    margin: 1em 0;
    list-style-type: disc;
  }

  .page-container ul li {
    margin-bottom: 0.5em;
  }

  .page-container ol {
    padding-left: 0;
    margin: 1em 0;
    list-style: none;
    counter-reset: item;
  }

  .page-container ol li {
    counter-increment: item;
    background-color: #e8f0fe;
    border-left: 4px solid #2563eb;
    padding: 15px;
    margin-bottom: 10px;
    border-radius: 4px;
    color: #1f3d61;
    font-size: 20px;
    line-height: 1.5;
  }

  .page-container ol li::before {
    content: counter(item) ". ";
    font-weight: bold;
    color: #2563eb;
    margin-right: 8px;
  }

  .page-container ol li:hover {
    background-color: #d0e3ff;
  }

  .page-container a {
    color: #2563eb;
    text-decoration: none;
  }
  
  .page-container a:hover {
    text-decoration: underline;
  }

  .page-container strong {
    font-weight: 600;
    color: #000;
  }

  /* Accordion styles for details/summary */
  .page-container details {
    border: 1px solid #ddd;
    border-radius: 8px;
    margin: 1.5em 0;
    background-color: #fafafa;
  }

  .page-container summary {
    background-color: #f0f0f0;
    padding: 15px 20px;
    cursor: pointer;
    font-weight: 600;
    font-size: 1.2rem;
    color: #333;
    border-radius: 8px 8px 0 0;
    transition: background-color 0.3s;
  }

  .page-container summary:hover {
    background-color: #e0e0e0;
  }

  .page-container details[open] summary {
    background-color: #e8f0fe;
    border-bottom: 1px solid #ddd;
    border-radius: 8px 8px 0 0;
  }

  .page-container details > div,
  .page-container details > *:not(summary) {
    padding: 15px 20px;
  }

  /* Tighter spacing inside dropdowns */
  .page-container details p {
    margin: 0.5em 0;
  }

  .page-container details h2 {
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }

  .page-container details h3 {
    margin-top: 0.75rem;
    margin-bottom: 0.25rem;
  }

  .page-container details img {
    margin: 1rem auto;
  }

  .page-container details ul,
  .page-container details ol {
    margin: 0.5em 0;
  }

  .page-container details ol li {
    margin-bottom: 5px;
    padding: 10px;
  }

  @media (max-width: 768px) {
    .page-container {
      padding: 30px 25px;
    }
    .page-container p,
    .page-container ul,
    .page-container ol li {
      font-size: 16px;
    }
    .page-container h2 {
      font-size: 22px;
    }
    .page-container h3 {
      font-size: 19px;
    }
  }

  @media (max-width: 600px) {
    .page-container {
      padding: 30px 20px;
    }
  }
</style>
