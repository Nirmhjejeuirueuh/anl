---
import { getAllTeamMembers } from "@/lib/strapiApi";
import TeamCard from "@/layouts/components/cards/TeamCard.astro";

const teamMembers = await getAllTeamMembers();

// Sort by order to ensure CEO comes first
const sortedTeam = teamMembers?.sort((a: any, b: any) => a.order - b.order) || [];

// Separate CEO from rest of team
const ceo = sortedTeam.find((member: any) => member.order === 1);
const otherMembers = sortedTeam.filter((member: any) => member.order !== 1);
---

<section class="py-16 md:py-20 lg:py-24 bg-gradient-to-br from-primary/5 via-transparent to-primary/5">
  <div class="container">
    <!-- Section Header -->
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-h2 mb-6 text-primary">Meet The Team</h2>
      <p class="text-lg text-muted max-w-2xl mx-auto">
        Our diverse team of experts brings together deep industry knowledge, innovative thinking, and a passion for excellence.
      </p>
    </div>

    {sortedTeam && sortedTeam.length > 0 ? (
      <div class="grid lg:grid-cols-12 gap-12 items-center">
        <!-- CEO Featured Section - Left Side -->
        {ceo && (
          <div class="lg:col-span-5" data-aos="fade-right">
            <a href={`/about/team/${ceo.slug}`} class="block group hover:no-underline">
              <div class="bg-gradient-to-br from-primary to-primary/80 rounded-3xl p-8 text-white shadow-2xl transition-all duration-300 group-hover:shadow-2xl group-hover:scale-105">
                <!-- Large CEO Profile -->
                <div class="flex flex-col items-center text-center">
                  <div class="w-48 h-48 rounded-full overflow-hidden border-4 border-white shadow-xl mb-6 group-hover:scale-105 transition-all duration-300">
                    {ceo.image ? (
                      <img 
                        src={ceo.image} 
                        alt={ceo.name}
                        class="w-full h-full object-cover"
                      />
                    ) : (
                      <div class="w-full h-full bg-white/20 flex items-center justify-center">
                        <span class="text-6xl text-white">{ceo.name?.charAt(0)}</span>
                      </div>
                    )}
                  </div>
                  
                  <h3 class="text-2xl font-bold mb-2 text-white">{ceo.name}</h3>
                  <p class="text-lg opacity-90 mb-4 text-white">{ceo.role}</p>
                  
                  {ceo.description && (
                    <p class="text-sm opacity-90 leading-relaxed max-w-md text-white">
                      {ceo.description}
                    </p>
                  )}
                  
                  <!-- LinkedIn Link Only -->
                  <div class="flex justify-center mt-6">
                    <a href="https://www.linkedin.com/in/amelia-ching/" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-white/20 hover:bg-white/40 rounded-full flex items-center justify-center transition-all duration-300">
                      <span class="sr-only">LinkedIn</span>
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                    </a>
                  </div>
                </div>
              </div>
            </a>
          </div>
        )}

        <!-- Rest of the Team - Right Side -->
        <div class="lg:col-span-7" data-aos="fade-left">
          {otherMembers && otherMembers.length > 0 && (
            <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
              {otherMembers.map((member: any, index: number) => (
                <a
                  href={`/about/team/${member.slug}`}
                  data-aos="fade-up"
                  data-aos-delay={100 + index * 50}
                  class="text-center group block hover:no-underline"
                >
                  <!-- Circular Profile Image -->
                  <div class="w-32 h-32 mx-auto mb-4 rounded-full overflow-hidden border-4 border-primary/20 shadow-lg group-hover:border-primary/40 transition-all group-hover:scale-105">
                    {member.image ? (
                      <img 
                        src={member.image} 
                        alt={member.name}
                        class="w-full h-full object-cover"
                      />
                    ) : (
                      <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                        <span class="text-3xl text-gray-400">{member.name?.charAt(0)}</span>
                      </div>
                    )}
                  </div>
                  
                  <h4 class="font-semibold text-lg text-gray-900 mb-1">{member.name}</h4>
                  <p class="text-sm text-primary font-medium">{member.role}</p>
                  
                  {member.description && (
                    <p class="text-xs text-gray-600 mt-2 line-clamp-2">
                      {member.description}
                    </p>
                  )}
                </a>
              ))}
            </div>
          )}
        </div>
      </div>
    ) : (
      <div class="text-center py-12" data-aos="fade-up">
        <div class="bg-gray-100 rounded-lg p-8 max-w-md mx-auto">
          <h3 class="text-lg font-semibold text-gray-800 mb-2">Team Section</h3>
          <p class="text-gray-600">Team members will be displayed here once added to the CMS.</p>
          <p class="text-sm text-gray-500 mt-2">API returned {sortedTeam?.length || 0} members</p>
        </div>
      </div>
    )}
  </div>
</section>
