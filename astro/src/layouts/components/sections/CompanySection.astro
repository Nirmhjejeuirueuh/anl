---
import { getEntryCTM } from "@/lib/contentParser.astro";
import { markdownify } from "@/lib/utils/textConverter";
import type { Section } from "@/types";

type Props = {
  mission?: string;
  vision?: string;
  values?: string;
};

const { mission, vision, values } = Astro.props;

// Fallback defaults
const defaultMission = "We partner with organisations to embrace the evolving technological landscape. We inspire individuals with know-how to stay abreast of the changing trends. We provide cutting-edge training and consulting solutions.";
const defaultVision = "To be your facilitating enabler to remain relevant in the changing IT landscape. We strive to bridge the gap between technology and business needs. We aim to empower organizations with innovative solutions.";
const defaultValues = "Be proactive at the technology forefront to scan and implement cutting-edge training and ideas. We are committed to excellence in everything we do. We value innovation, integrity, and collaboration.";

const actualMission = mission || defaultMission;
const actualVision = vision || defaultVision;
const actualValues = values || defaultValues;
---

<section class="py-16 lg:py-20">
  <div class="container">
    <div class="grid gap-12 md:grid-cols-1 lg:grid-cols-3">
      <!-- Mission -->
      <div class="text-center" data-aos="fade-up">
        <h3 class="text-h4 mb-4 text-primary">Our Mission</h3>
        <pre class="text-lg leading-relaxed text-muted max-w-none whitespace-pre-wrap">{actualMission}</pre>
      </div>

      <!-- Vision -->
      <div class="text-center" data-aos="fade-up" data-aos-delay="200">
        <h3 class="text-h4 mb-4 text-primary">Our Vision</h3>
        <pre class="text-lg leading-relaxed text-muted max-w-none whitespace-pre-wrap">{actualVision}</pre>
      </div>

      <!-- Core Values -->
      <div class="text-center" data-aos="fade-up" data-aos-delay="400">
        <h3 class="text-h4 mb-4 text-primary">Our Core Values</h3>
        <pre class="text-lg leading-relaxed text-muted max-w-none whitespace-pre-wrap">{actualValues}</pre>
      </div>
    </div>
  </div>
</section>