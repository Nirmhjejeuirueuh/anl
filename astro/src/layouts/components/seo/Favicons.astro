---
import config from ".astro/config.generated.json" with { type: "json" };

const favicons = [
  {
    rel: "apple-touch-icon",
    sizes: "180x180",
    href: "/logo.png",
  },
  {
    rel: "icon",
    type: "image/png",
    sizes: "32x32",
    href: "/logo.png",
  },
  {
    rel: "icon",
    type: "image/png",
    sizes: "16x16",
    href: "/favicon.ico",
  },
  {
    rel: "shortcut icon",
    type: "image/x-icon",
    href: "/favicon.ico",
  },
  {
    name: "msapplication-TileImage",
    content: "/logo.png",
  },
];

const metaTags = [
  { name: "msapplication-navbutton-color", content: "#fff" },
  { name: "theme-color", content: "#fff" },
  { name: "mobile-web-app-capable", content: "AgilenLite" },
  { name: "apple-mobile-web-app-capable", content: "AgilenLite" },
  { name: "application-name", content: "AgilenLite" },
  { name: "apple-mobile-web-app-title", content: "AgilenLite" },
  { name: "apple-mobile-web-app-status-bar-style", content: "white" },
  { name: "msapplication-starturl", content: "/" },
];
---

<!--------------
    Favicons    
---------------->{
  favicons.map((favicon) => (
    <link
      rel={favicon.rel}
      type={favicon.type}
      sizes={favicon.sizes}
      href={favicon.href}
    />
  ))
}

{metaTags.map((meta) => <meta name={meta.name} content={meta.content} />)}
