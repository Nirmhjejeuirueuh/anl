---
import type { TeamMember } from "@/types";
import OptimizedImage from "@/components/utilities/OptimizedImage.astro";
import { markdownify } from "@/lib/utils/textConverter";

interface Props {
  content: TeamMember;
  imageSize?: "lg" | "md";
  class?: string;
}

const { content, imageSize = "lg", class: className, ...rest } = Astro.props;
const { name, role, image, social } = content as TeamMember;

// Create URL slug from name
const memberSlug = name ? name.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '') : '';
---

<a
  href={`/about/team/${memberSlug}`}
  class="cursor-pointer block"
  {...rest}>
  <div class="group relative flex flex-col items-center p-6 bg-white rounded-lg shadow-md border border-gray-200 hover:shadow-lg transform scale-100 hover:scale-105 transition-all duration-300 ease-out"
       style="will-change: transform;">
    <div class="relative">
      <OptimizedImage
        class:list={[
          "rounded-full object-cover",
          imageSize === "lg" ? "h-48 w-48" : "h-32 w-32",
        ]}
        src={image}
        alt={name}
      />
    </div>
    <div class="mt-4 text-center">
      {
        name && (
          <h3
            class="text-lg/snug text-inherit font-semibold"
            set:html={markdownify(name)}
          />
        )
      }
      {
        role && (
          <p
            class="mt-1 text-sm text-inherit opacity-80"
            set:html={markdownify(role)}
          />
        )
      }
    </div>
  </div>
</a>
