---
import { markdownify, toSentenceCase } from "@/lib/utils/textConverter";
import OptimizedImage from "@/components/utilities/OptimizedImage.astro";
import Icons from "@/helpers/Icons.astro";

const { class: className, strapiUrl = import.meta.env.STRAPI_URL || 'http://localhost:1337' } = Astro.props;
let { enable, testimonial } = Astro.props.content || {};

const getTextColor = (bgColor: string) => {
  const colorMap: Record<string, string> = {
    'yellow': '#000',      // Black text on yellow
    'red': '#fff',         // White text on red
    'cyan': '#000',        // Black text on cyan
    'blue': '#fff',        // White text on blue
    'dark-green': '#fff',  // White text on dark-green
    'green': '#fff'        // White text on green
  };
  return colorMap[bgColor] || '#000'; // Default to black if color not found
};

const bgColor = testimonial?.backgroundColor || 'nil';
const textColor = bgColor !== 'nil' ? getTextColor(bgColor) : '#000';
const bgClass = bgColor !== 'nil' ? `bg-${bgColor}` : 'bg-white';
---

{
  enable && testimonial && (
    <div class:list={["relative flex flex-col w-full p-6 rounded-lg shadow-md overflow-visible", bgClass, testimonial.avatar && testimonial.isFeatured ? 'pb-24' : '', className]} style={`color: ${textColor}`}>
      {/* Company Logo/Name Section */}
      {(testimonial.companyLogo || testimonial.logoText || testimonial.companyName) && (
        <div class="t-logo mb-4">
          {testimonial.companyLogo && (
            <OptimizedImage
              src={testimonial.companyLogo.url.startsWith('http') ? testimonial.companyLogo.url : `${strapiUrl}${testimonial.companyLogo.url}`}
              alt={testimonial.companyName || 'Company logo'}
              width={testimonial.companyLogo.width || 100}
              height={testimonial.companyLogo.height || 50}
              class="max-h-12 w-auto object-contain"
            />
          )}
          {testimonial.logoText && (
            <div class="t-logo-text text-xl font-bold">
              {testimonial.logoText}
            </div>
          )}
          {!testimonial.companyLogo && testimonial.companyName && (
            <div class="text-lg font-semibold">
              {testimonial.companyName}
            </div>
          )}
        </div>
      )}

      {/* Testimonial Content */}
      <div class="t-desc mb-6 flex-grow">
        <p class="text-base leading-relaxed" set:html={markdownify(testimonial.shortTestimonial)} />
      </div>

      {/* Person Info */}
      {(testimonial.personName || testimonial.personRole) && (
        <div class="mb-4">
          {testimonial.personName && (
            <p class="font-bold text-lg">{testimonial.personName}</p>
          )}
          {testimonial.personRole && (
            <p class="text-sm italic opacity-80">{testimonial.personRole}</p>
          )}
        </div>
      )}

      {/* Read Story Button */}
      {testimonial.hasStory && testimonial.fullStory && (
        <div class="t-action mt-auto">
          <button
            class="testimonial-modal-btn text-primary hover:text-primary/80 font-semibold text-sm uppercase tracking-wide transition-colors"
            data-testimonial={JSON.stringify({
              companyName: testimonial.companyName,
              companyLogo: testimonial.companyLogo,
              fullStory: testimonial.fullStory,
              personName: testimonial.personName,
              personRole: testimonial.personRole,
              avatar: testimonial.avatar
            })}
            data-strapi-url={strapiUrl}
          >
            READ THE STORY â€º
          </button>
        </div>
      )}

      {/* Avatar for Featured Testimonials */}
      {testimonial.avatar && testimonial.isFeatured && (
        <div class="t-avatar absolute bottom-6 right-6">
          <OptimizedImage
            src={testimonial.avatar.url.startsWith('http') ? testimonial.avatar.url : `${strapiUrl}${testimonial.avatar.url}`}
            alt={testimonial.personName || 'Testimonial author'}
            width={testimonial.avatar.width || 80}
            height={testimonial.avatar.height || 80}
            class="w-20 h-20 rounded-full object-cover border-4 border-white shadow-lg"
          />
        </div>
      )}
    </div>
  )
}

<script>
  // Modal functionality for testimonials - no API calls needed, data is embedded
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('.testimonial-modal-btn');

    buttons.forEach(button => {
      button.addEventListener('click', () => {
        try {
          const testimonialData = button.getAttribute('data-testimonial');
          const strapiUrl = button.getAttribute('data-strapi-url');

          if (!testimonialData) {
            console.error('No testimonial data found');
            return;
          }

          const testimonial = JSON.parse(testimonialData);

          // Create modal overlay
          const modal = document.createElement('div');
          modal.className = 'fixed inset-0 bg-black/90 flex items-center justify-center z-50 p-4';
          modal.innerHTML = `
            <div class="bg-white rounded-lg max-w-2xl w-full max-h-[80vh] overflow-y-auto relative">
              <div class="p-6">
                <button onclick="this.closest('.fixed').remove()" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 text-2xl font-bold">&times;</button>

                <div class="mb-6">
                  ${testimonial.companyLogo ? `<img src="${testimonial.companyLogo.url.startsWith('http') ? testimonial.companyLogo.url : `${strapiUrl}${testimonial.companyLogo.url}`}" alt="${testimonial.companyName || 'Company logo'}" class="max-h-12 w-auto object-contain mb-4">` : ''}
                  ${testimonial.companyName ? `<h3 class="text-xl font-bold mb-2">${testimonial.companyName}</h3>` : ''}
                </div>

                <div class="prose prose-lg max-w-none mb-6">
                  ${testimonial.fullStory}
                </div>

                ${testimonial.personName || testimonial.personRole ? `
                  <div class="border-t pt-4">
                    ${testimonial.personName ? `<p class="font-bold text-lg">${testimonial.personName}</p>` : ''}
                    ${testimonial.personRole ? `<p class="text-sm italic text-gray-600">${testimonial.personRole}</p>` : ''}
                  </div>
                ` : ''}

                ${testimonial.avatar ? `
                  <div class="mt-4">
                    <img src="${testimonial.avatar.url.startsWith('http') ? testimonial.avatar.url : `${strapiUrl}${testimonial.avatar.url}`}" alt="${testimonial.personName || 'Testimonial author'}" class="w-16 h-16 rounded-full object-cover">
                  </div>
                ` : ''}
              </div>
            </div>
          `;

          // Close modal when clicking outside
          modal.addEventListener('click', (e) => {
            if (e.target === modal) {
              modal.remove();
            }
          });

          document.body.appendChild(modal);
        } catch (error) {
          console.error('Error opening testimonial modal:', error);
        }
      });
    });
  });
</script>
