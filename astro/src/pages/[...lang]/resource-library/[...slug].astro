---
import Base from "@/layouts/Base.astro";
import { getResourceLibraryBySlug } from "@/lib/utils/strapiApi";
import CallToAction from "@/components/sections/CallToAction.astro";
import PageHeader from "@/layouts/components/widgets/PageHeader.astro";
import { generatePaths } from "@/lib/utils/i18nUtils.ts";
import { STRAPI_URL } from "@/lib/strapiApi";
import { markdownify } from "@/lib/utils/textConverter";

export function getStaticPaths() {
  return generatePaths();
}

export const prerender = false;

const { slug } = Astro.params;

// Fetch resource library by slug
const resource = await getResourceLibraryBySlug(slug as string);

if (!resource) {
  return Astro.redirect('/404');
}

// Redirect videos back to index page since they display inline
if (resource.resourceType === 'video') {
  return Astro.redirect(`/${['en', 'fr'].includes(Astro.params.lang) ? Astro.params.lang : ''}/resource-library`.replace(/^\//, ''));
}

// Page data
const pageData = {
  title: resource.title,
  subtitle: resource.title,
  metaDescription: resource.title,
  draft: false
};
---

<Base title={pageData.title} metaDescription={pageData.metaDescription} draft={pageData.draft}>
  <PageHeader {...pageData} />

  <!-- Resource Content Section -->
  <section class="py-16 md:py-20 lg:py-24">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <!-- Resource Type Badge -->
        <div class="flex items-center justify-center mb-8">
          <span class={`inline-flex items-center px-4 py-2 rounded-full text-sm font-medium ${
            resource.resourceType === 'video' ? 'bg-red-100 text-red-800' :
            resource.resourceType === 'pdf' ? 'bg-blue-100 text-blue-800' :
            resource.resourceType === 'document' ? 'bg-green-100 text-green-800' :
            resource.resourceType === 'article' ? 'bg-purple-100 text-purple-800' :
            'bg-gray-100 text-gray-800'
          }`}>
            {resource.resourceType === 'video' && (
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"/>
              </svg>
            )}
            {resource.resourceType === 'pdf' && (
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
              </svg>
            )}
            {resource.resourceType === 'document' && (
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
              </svg>
            )}
            {resource.resourceType === 'article' && (
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"/>
              </svg>
            )}
            {resource.resourceType || 'Resource'}
          </span>
        </div>

        <!-- Resource Image -->
        {resource.image && (
          <div class="mb-8">
            <img
              src={resource.image.url.startsWith('http') ? resource.image.url : `${STRAPI_URL}${resource.image.url}`}
              alt={resource.title}
              class="w-full h-auto rounded-2xl shadow-lg"
            />
          </div>
        )}

        <!-- Video Embed -->
        {resource.resourceType === 'video' && resource.videoUrl && (
          <div class="mb-8">
            <div class="aspect-video rounded-2xl overflow-hidden shadow-lg">
              {resource.videoUrl.includes('youtube.com') || resource.videoUrl.includes('youtu.be') ? (
                <iframe
                  src={`https://www.youtube.com/embed/${getYouTubeVideoId(resource.videoUrl)}`}
                  title={resource.title}
                  class="w-full h-full"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                ></iframe>
              ) : (
                <video
                  controls
                  class="w-full h-full"
                  poster={resource.image ? (resource.image.url.startsWith('http') ? resource.image.url : `${STRAPI_URL}${resource.image.url}`) : undefined}
                >
                  <source src={resource.videoUrl} type="video/mp4" />
                  Your browser does not support the video tag.
                </video>
              )}
            </div>
          </div>
        )}

        <!-- PDF/Document Viewer -->
        {(resource.resourceType === 'pdf' || resource.resourceType === 'document') && (resource.pdfUrl || resource.externalUrl) && (
          <div class="mb-8">
            <div class="bg-gray-50 rounded-2xl p-8 text-center">
              <div class="mb-4">
                <svg class={`w-16 h-16 mx-auto ${
                  resource.resourceType === 'pdf' ? 'text-red-500' : 'text-blue-500'
                }`} fill="currentColor" viewBox="0 0 20 20">
                  {resource.resourceType === 'pdf' ? (
                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                  ) : (
                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                  )}
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-4">
                {resource.resourceType === 'pdf' ? 'Download PDF Document' : 'View Document'}
              </h3>
              <a
                href={resource.pdfUrl || resource.externalUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors font-medium"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                {resource.resourceType === 'pdf' ? 'Download PDF' : 'Open Document'}
              </a>
            </div>
          </div>
        )}

        <!-- External Link -->
        {resource.resourceType === 'other' && resource.externalUrl && (
          <div class="mb-8">
            <div class="bg-blue-50 rounded-2xl p-8 text-center">
              <div class="mb-4">
                <svg class="w-16 h-16 mx-auto text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-4">External Resource</h3>
              <a
                href={resource.externalUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
                Visit Resource
              </a>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <CallToAction />
</Base>

<script>
  // Helper function to extract YouTube video ID
  function getYouTubeVideoId(url: string): string {
    const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
    const match = url.match(regExp);
    return (match && match[2].length == 11) ? match[2] : '';
  }
</script>