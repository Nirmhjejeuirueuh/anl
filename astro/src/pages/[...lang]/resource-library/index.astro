---
import Base from "@/layouts/Base.astro";
import { getResourceLibraries } from "@/lib/utils/strapiApi";
import CallToAction from "@/components/sections/CallToAction.astro";
import PageHeader from "@/layouts/components/widgets/PageHeader.astro";
import { generatePaths } from "@/lib/utils/i18nUtils.ts";
import { STRAPI_URL } from "@/lib/strapiApi";
import { markdownify } from "@/lib/utils/textConverter";

export function getStaticPaths() {
  return generatePaths();
}

export const prerender = false;

// Fetch resource libraries from Strapi
const strapiResourceLibraries = await getResourceLibraries();

// Separate active and archived resources
const activeResources = strapiResourceLibraries.filter(r => !r.archive);
const archivedResources = strapiResourceLibraries.filter(r => r.archive);

// Mock index page data
const indexData = {
  title: "Resource Library",
  subtitle: "Access our comprehensive collection of training materials, videos, documents, and resources",
  metaDescription: "Explore AgileN Lite's resource library featuring training videos, PDF guides, documentation, articles, and other valuable resources for your professional development.",
  draft: false
};

// Helper function to extract YouTube video ID
function getYouTubeVideoId(url: string): string {
  const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
  const match = url.match(regExp);
  return (match && match[2].length == 11) ? match[2] : '';
}
---

<Base title={indexData.title} metaDescription={indexData.metaDescription} draft={indexData.draft}>
  <PageHeader {...indexData} />

  <!-- Resource Libraries Cards Section -->
  {strapiResourceLibraries && strapiResourceLibraries.length > 0 ? (
    <section class="py-4 md:py-8 lg:py-12 bg-theme-light">
      <div class="container">
        <!-- Filter and Sort Controls -->
        <div class="mb-8 bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
          <div class="flex flex-col lg:flex-row gap-6 items-start lg:items-center justify-between">
            <div class="flex flex-col sm:flex-row gap-4 flex-1">
              <div class="relative">
                <label for="category-filter" class="block text-sm font-semibold text-gray-800 mb-2">Filter by Category</label>
                <div class="relative">
                  <select id="category-filter" class="appearance-none bg-gray-50 border border-gray-200 rounded-xl px-4 py-3 pr-10 focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-200 text-gray-700 font-medium min-w-[200px]">
                    <option value="">All Categories</option>
                    <!-- Categories will be populated by JavaScript -->
                  </select>
                  <div class="absolute inset-y-0 right-0 flex items-center px-3 pointer-events-none">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </div>
                </div>
              </div>
              <div class="relative">
                <label for="resource-type-filter" class="block text-sm font-semibold text-gray-800 mb-2">Filter by Type</label>
                <div class="relative">
                  <select id="resource-type-filter" class="appearance-none bg-gray-50 border border-gray-200 rounded-xl px-4 py-3 pr-10 focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-200 text-gray-700 font-medium min-w-[200px]">
                    <option value="">All Types</option>
                    <!-- Resource types will be populated by JavaScript -->
                  </select>
                  <div class="absolute inset-y-0 right-0 flex items-center px-3 pointer-events-none">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </div>
                </div>
              </div>
              <div class="relative">
                <label for="sort-select" class="block text-sm font-semibold text-gray-800 mb-2">Sort by Date</label>
                <div class="relative">
                  <select id="sort-select" class="appearance-none bg-gray-50 border border-gray-200 rounded-xl px-4 py-3 pr-10 focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-200 text-gray-700 font-medium min-w-[200px]">
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                  </select>
                  <div class="absolute inset-y-0 right-0 flex items-center px-3 pointer-events-none">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <a
                href="#archived-section"
                class="inline-flex items-center px-4 py-2 font-medium rounded-full transition-colors whitespace-nowrap cursor-pointer bg-gray-50 hover:bg-gray-100 text-gray-700 border border-gray-200 hover:border-gray-300"
                data-aos="fade-up-sm"
                data-aos-delay="200"
              >
                <svg class="mr-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Resource Archive
              </a>
              <div class="flex items-center gap-2 text-sm font-medium text-gray-600 bg-gray-50 px-4 py-2 rounded-xl">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                <span id="result-count" class="font-semibold text-primary">{activeResources.length}</span>
                <span>resources found</span>
              </div>
            </div>
          </div>
        </div>

        <div id="resources-grid" class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 lg:gap-12">
          {strapiResourceLibraries.filter(r => !r.archive).map((resource, index) => (
            <div
              data-aos="fade-up-sm"
              data-aos-delay={index * 150}
              class="group bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100"
            >
              {(resource.image || resource.media || resource.resourceType === 'article') && resource.resourceType !== 'video' && (
                <div class="overflow-hidden aspect-[16/9]">
                  {resource.resourceType === 'pdf' && (resource.pdfUrl || resource.externalUrl || resource.media) ? (
                    <a
                      href={
                        resource.pdfUrl || resource.externalUrl ||
                        (resource.media ?
                          (resource.media.url.startsWith('http') ? resource.media.url : `${STRAPI_URL}${resource.media.url}`) :
                          '')
                      }
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block w-full h-full"
                    >
                      <img
                        src={
                          resource.image ?
                            (resource.image.url.startsWith('http') ? resource.image.url : `${STRAPI_URL}${resource.image.url}`) :
                            (resource.media.url.startsWith('http') ? resource.media.url : `${STRAPI_URL}${resource.media.url}`)
                        }
                        alt={resource.title}
                        class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-300"
                      />
                    </a>
                  ) : (
                    <img
                      src={
                        resource.resourceType === 'article' ? '/images/articel.jpg' :
                        resource.image ?
                          (resource.image.url.startsWith('http') ? resource.image.url : `${STRAPI_URL}${resource.image.url}`) :
                          (resource.media.url.startsWith('http') ? resource.media.url : `${STRAPI_URL}${resource.media.url}`)
                      }
                      alt={resource.title}
                      class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-300"
                    />
                  )}
                </div>
              )}

              <!-- Video iframe for video resources -->
              {resource.resourceType === 'video' && resource.videoUrl && (
                <div class="aspect-video overflow-hidden">
                  {resource.videoUrl.includes('youtube.com') || resource.videoUrl.includes('youtu.be') ? (
                    <iframe
                      src={`https://www.youtube.com/embed/${getYouTubeVideoId(resource.videoUrl)}`}
                      title={resource.title}
                      class="w-full h-full rounded-t-2xl"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen
                    ></iframe>
                  ) : (
                    <video
                      controls
                      class="w-full h-full rounded-t-2xl"
                      poster={resource.image ? (resource.image.url.startsWith('http') ? resource.image.url : `${STRAPI_URL}${resource.image.url}`) : undefined}
                    >
                      <source src={resource.videoUrl} type="video/mp4" />
                      Your browser does not support the video tag.
                    </video>
                  )}
                </div>
              )}
              <div class="p-6 md:p-8">
                <div class="flex items-center justify-between mb-3">
                  <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                    resource.resourceType === 'video' ? 'bg-red-100 text-red-800' :
                    resource.resourceType === 'pdf' ? 'bg-blue-100 text-blue-800' :
                    resource.resourceType === 'document' ? 'bg-green-100 text-green-800' :
                    resource.resourceType === 'article' ? 'bg-purple-100 text-purple-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {resource.resourceType === 'video' && (
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"/>
                      </svg>
                    )}
                    {resource.resourceType === 'pdf' && (
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                      </svg>
                    )}
                    {resource.resourceType === 'document' && (
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                      </svg>
                    )}
                    {resource.resourceType === 'article' && (
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"/>
                      </svg>
                    )}
                    {resource.resourceType || 'other'}
                  </span>
                  {resource.featured && (
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      Featured
                    </span>
                  )}
                </div>
                <h3 class="text-h5 text-primary mb-3 line-clamp-2">{resource.title}</h3>
                <div class="mt-4">
                  {resource.resourceType === 'pdf' && (resource.pdfUrl || resource.externalUrl || resource.media) ? (
                    <a
                      href={
                        resource.pdfUrl || resource.externalUrl ||
                        (resource.media ?
                          (resource.media.url.startsWith('http') ? resource.media.url : `${STRAPI_URL}${resource.media.url}`) :
                          '')
                      }
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center text-primary font-medium hover:text-primary/80 transition-colors"
                    >
                      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                      </svg>
                      Open PDF
                      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                    </a>
                  ) : (resource.resourceType === 'document' || resource.resourceType === 'article') ? (
                    <a
                      href={`/${['en', 'fr'].includes(Astro.params.lang ?? '') ? Astro.params.lang : ''}/resource-library/${resource.slug}`.replace(/^\/\//, '/')}
                      class="inline-flex items-center text-primary font-medium hover:text-primary/80 transition-colors"
                    >
                      {resource.resourceType === 'document' ? 'View Document' :
                       resource.resourceType === 'article' ? 'Read Article' :
                       ''}
                      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  ) : null}
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Archived Resources Section -->
        {archivedResources.length > 0 && (
          <div id="archived-section" class="mt-16">
            <div class="flex items-center justify-between mb-8">
              <div class="flex items-center gap-3">
                <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                </svg>
                <h2 class="text-2xl md:text-3xl font-bold text-gray-800">Archived Resources</h2>
              </div>
              <div class="flex items-center gap-2 text-sm font-medium text-gray-600 bg-gray-50 px-4 py-2 rounded-xl">
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                </svg>
                <span id="archived-count" class="font-semibold text-gray-700">{archivedResources.length}</span>
                <span>archived</span>
              </div>
            </div>
            <div id="archived-resources-grid" class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 lg:gap-12">
              {archivedResources.map((resource, index) => (
                <div
                  data-aos="fade-up-sm"
                  data-aos-delay={index * 150}
                  class="group bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100"
                >
                  {(resource.image || resource.media || resource.resourceType === 'article') && resource.resourceType !== 'video' && (
                    <div class="overflow-hidden aspect-[16/9]">
                      {resource.resourceType === 'pdf' && (resource.pdfUrl || resource.externalUrl || resource.media) ? (
                        <a
                          href={
                            resource.pdfUrl || resource.externalUrl ||
                            (resource.media ?
                              (resource.media.url.startsWith('http') ? resource.media.url : `${STRAPI_URL}${resource.media.url}`) :
                              '')
                          }
                          target="_blank"
                          rel="noopener noreferrer"
                          class="block w-full h-full"
                        >
                          <img
                            src={
                              resource.image ?
                                (resource.image.url.startsWith('http') ? resource.image.url : `${STRAPI_URL}${resource.image.url}`) :
                                (resource.media.url.startsWith('http') ? resource.media.url : `${STRAPI_URL}${resource.media.url}`)
                            }
                            alt={resource.title}
                            class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-300"
                          />
                        </a>
                      ) : (
                        <img
                          src={
                            resource.resourceType === 'article' ? '/images/articel.jpg' :
                            resource.image ?
                              (resource.image.url.startsWith('http') ? resource.image.url : `${STRAPI_URL}${resource.image.url}`) :
                              (resource.media.url.startsWith('http') ? resource.media.url : `${STRAPI_URL}${resource.media.url}`)
                          }
                          alt={resource.title}
                          class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-300"
                        />
                      )}
                    </div>
                  )}

                  <!-- Video iframe for video resources -->
                  {resource.resourceType === 'video' && resource.videoUrl && (
                    <div class="aspect-video overflow-hidden">
                      {resource.videoUrl.includes('youtube.com') || resource.videoUrl.includes('youtu.be') ? (
                        <iframe
                          src={`https://www.youtube.com/embed/${getYouTubeVideoId(resource.videoUrl)}`}
                          title={resource.title}
                          class="w-full h-full rounded-t-2xl"
                          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                          allowfullscreen
                        ></iframe>
                      ) : (
                        <video
                          controls
                          class="w-full h-full rounded-t-2xl"
                          poster={resource.image ? (resource.image.url.startsWith('http') ? resource.image.url : `${STRAPI_URL}${resource.image.url}`) : undefined}
                        >
                          <source src={resource.videoUrl} type="video/mp4" />
                          Your browser does not support the video tag.
                        </video>
                      )}
                    </div>
                  )}
                  <div class="p-6 md:p-8">
                    <div class="flex items-center justify-between mb-3">
                      <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                        resource.resourceType === 'video' ? 'bg-red-100 text-red-800' :
                        resource.resourceType === 'pdf' ? 'bg-blue-100 text-blue-800' :
                        resource.resourceType === 'document' ? 'bg-green-100 text-green-800' :
                        resource.resourceType === 'article' ? 'bg-purple-100 text-purple-800' :
                        'bg-gray-100 text-gray-800'
                      }`}>
                        {resource.resourceType === 'video' && (
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"/>
                          </svg>
                        )}
                        {resource.resourceType === 'pdf' && (
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                          </svg>
                        )}
                        {resource.resourceType === 'document' && (
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                          </svg>
                        )}
                        {resource.resourceType === 'article' && (
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"/>
                          </svg>
                        )}
                        {resource.resourceType || 'other'}
                      </span>
                      {resource.featured && (
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          Featured
                        </span>
                      )}
                    </div>
                    <h3 class="text-h5 text-primary mb-3 line-clamp-2">{resource.title}</h3>
                    <div class="mt-4">
                      {resource.resourceType === 'pdf' && (resource.pdfUrl || resource.externalUrl || resource.media) ? (
                        <a
                          href={
                            resource.pdfUrl || resource.externalUrl ||
                            (resource.media ?
                              (resource.media.url.startsWith('http') ? resource.media.url : `${STRAPI_URL}${resource.media.url}`) :
                              '')
                          }
                          target="_blank"
                          rel="noopener noreferrer"
                          class="inline-flex items-center text-primary font-medium hover:text-primary/80 transition-colors"
                        >
                          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                          </svg>
                          Open PDF
                          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                          </svg>
                        </a>
                      ) : (resource.resourceType === 'document' || resource.resourceType === 'article') ? (
                        <a
                          href={`/${['en', 'fr'].includes(Astro.params.lang ?? '') ? Astro.params.lang : ''}/resource-library/${resource.slug}`.replace(/^\/\//, '/')}
                          class="inline-flex items-center text-primary font-medium hover:text-primary/80 transition-colors"
                        >
                          {resource.resourceType === 'document' ? 'View Document' :
                           resource.resourceType === 'article' ? 'Read Article' :
                           ''}
                          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                          </svg>
                        </a>
                      ) : null}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    </section>
  ) : (
    <section class="py-16 md:py-20 lg:py-24 bg-gray-50">
      <div class="container">
        <div class="text-center">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Resource Library Coming Soon</h2>
          <p class="text-gray-600">We're working on organizing our resource collection. Check back soon!</p>
        </div>
      </div>
    </section>
  )}

  <CallToAction />
</Base>

<script define:vars={{ strapiResourceLibraries, STRAPI_URL }}>
  // Resource data from server
  const resources = strapiResourceLibraries || [];
  const strapiUrl = STRAPI_URL;

  // DOM elements
  const categoryFilter = document.getElementById('category-filter');
  const resourceTypeFilter = document.getElementById('resource-type-filter');
  const sortSelect = document.getElementById('sort-select');
  const resourcesGrid = document.getElementById('resources-grid');
  const resultCount = document.getElementById('result-count');

  // Get unique categories
  const categories = [...new Set(resources.map(r => r.category).filter(Boolean))].sort();

  // Get unique resource types
  const resourceTypes = [...new Set(resources.map(r => r.resourceType).filter(Boolean))].sort();

  // Populate category dropdown
  categories.forEach(category => {
    const option = document.createElement('option');
    option.value = category;
    option.textContent = category;
    categoryFilter.appendChild(option);
  });

  // Populate resource type dropdown
  resourceTypes.forEach(resourceType => {
    const option = document.createElement('option');
    option.value = resourceType;
    // Capitalize first letter and format the display text
    const displayText = resourceType.charAt(0).toUpperCase() + resourceType.slice(1).replace(/([A-Z])/g, ' $1');
    option.textContent = displayText;
    resourceTypeFilter.appendChild(option);
  });

  // Helper function to extract YouTube video ID
  function getYouTubeVideoId(url) {
    const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
    const match = url.match(regExp);
    return (match && match[2].length == 11) ? match[2] : '';
  }

  // Render resource card
  function renderResourceCard(resource) {
    const card = document.createElement('div');
    card.className = 'group bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100';
    card.setAttribute('data-aos', 'fade-up-sm');

    let imageHtml = '';
    if ((resource.image || resource.media || resource.resourceType === 'article') && resource.resourceType !== 'video') {
      const imageUrl = resource.resourceType === 'article' ? '/images/articel.jpg' :
        resource.image ?
          (resource.image.url.startsWith('http') ? resource.image.url : `${strapiUrl}${resource.image.url}`) :
          (resource.media.url.startsWith('http') ? resource.media.url : `${strapiUrl}${resource.media.url}`);

      if (resource.resourceType === 'pdf' && (resource.pdfUrl || resource.externalUrl || resource.media)) {
        const pdfUrl = resource.pdfUrl || resource.externalUrl ||
          (resource.media ?
            (resource.media.url.startsWith('http') ? resource.media.url : `${strapiUrl}${resource.media.url}`) :
            '');
        imageHtml = `
          <div class="aspect-[16/9] overflow-hidden">
            <a href="${pdfUrl}" target="_blank" rel="noopener noreferrer" class="block w-full h-full">
              <img src="${imageUrl}" alt="${resource.title}" class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-300" />
            </a>
          </div>
        `;
      } else {
        imageHtml = `
          <div class="aspect-[16/9] overflow-hidden">
            <img src="${imageUrl}" alt="${resource.title}" class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-300" />
          </div>
        `;
      }
    } else if (resource.resourceType === 'video' && resource.videoUrl) {
      if (resource.videoUrl.includes('youtube.com') || resource.videoUrl.includes('youtu.be')) {
        const videoId = getYouTubeVideoId(resource.videoUrl);
        imageHtml = `
          <div class="aspect-video overflow-hidden">
            <iframe src="https://www.youtube.com/embed/${videoId}" title="${resource.title}" class="w-full h-full rounded-t-2xl" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
        `;
      } else {
        imageHtml = `
          <div class="aspect-video overflow-hidden">
            <video controls class="w-full h-full rounded-t-2xl" poster="${resource.image ? (resource.image.url.startsWith('http') ? resource.image.url : `${strapiUrl}${resource.image.url}`) : undefined}">
              <source src="${resource.videoUrl}" type="video/mp4" />
              Your browser does not support the video tag.
            </video>
          </div>
        `;
      }
    }

    const typeClasses = {
      video: 'bg-red-100 text-red-800',
      pdf: 'bg-blue-100 text-blue-800',
      document: 'bg-green-100 text-green-800',
      article: 'bg-purple-100 text-purple-800'
    };

    const typeClass = typeClasses[resource.resourceType] || 'bg-gray-100 text-gray-800';

    let actionHtml = '';
    if (resource.resourceType === 'pdf' && (resource.pdfUrl || resource.externalUrl || resource.media)) {
      const pdfUrl = resource.pdfUrl || resource.externalUrl ||
        (resource.media ?
          (resource.media.url.startsWith('http') ? resource.media.url : `${strapiUrl}${resource.media.url}`) :
          '');
      actionHtml = `
        <a href="${pdfUrl}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-primary font-medium hover:text-primary/80 transition-colors">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
          </svg>
          Open PDF
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </a>
      `;
    } else if (resource.resourceType === 'document' || resource.resourceType === 'article') {
      const lang = window.location.pathname.split('/')[1] || '';
      const link = `/${lang}/resource-library/${resource.slug}`.replace(/^\/\//, '/');
      actionHtml = `
        <a href="${link}" class="inline-flex items-center text-primary font-medium hover:text-primary/80 transition-colors">
          ${resource.resourceType === 'document' ? 'View Document' : 'Read Article'}
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      `;
    }

    card.innerHTML = `
      ${imageHtml}
      <div class="p-6 md:p-8">
        <div class="flex items-center justify-between mb-3">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${typeClass}">
            ${resource.resourceType === 'video' ? '<svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20"><path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"/></svg>' : ''}
            ${resource.resourceType === 'pdf' ? '<svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/></svg>' : ''}
            ${resource.resourceType === 'document' ? '<svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/></svg>' : ''}
            ${resource.resourceType === 'article' ? '<svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"/></svg>' : ''}
            ${resource.resourceType || 'other'}
          </span>
          ${resource.featured ? '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Featured</span>' : ''}
        </div>
        <h3 class="text-h5 text-primary mb-3 line-clamp-2">${resource.title}</h3>
        <div class="mt-4">
          ${actionHtml}
        </div>
      </div>
    `;

    return card;
  }

  // Filter and sort resources
  function filterAndSortResources() {
    const selectedCategory = categoryFilter.value;
    const selectedResourceType = resourceTypeFilter.value;
    const sortOrder = sortSelect.value;

    let filtered = resources;

    // Filter out archived resources from main view
    filtered = filtered.filter(r => !r.archive);

    // Filter by category
    if (selectedCategory) {
      filtered = filtered.filter(r => r.category === selectedCategory);
    }

    // Filter by resource type
    if (selectedResourceType) {
      filtered = filtered.filter(r => r.resourceType === selectedResourceType);
    }

    // Sort by date
    filtered.sort((a, b) => {
      const dateA = a.date ? new Date(a.date) : new Date(0);
      const dateB = b.date ? new Date(b.date) : new Date(0);
      return sortOrder === 'newest' ? dateB - dateA : dateA - dateB;
    });

    // Update result count
    resultCount.textContent = filtered.length;

    // Clear and repopulate grid
    resourcesGrid.innerHTML = '';
    filtered.forEach((resource, index) => {
      const card = renderResourceCard(resource);
      card.style.animationDelay = `${index * 150}ms`;
      resourcesGrid.appendChild(card);
    });
  }

  // Filter and sort archived resources
  function filterAndSortArchivedResources() {
    const selectedResourceType = resourceTypeFilter.value;
    const sortOrder = sortSelect.value;

    // Filter only archived resources
    let archived = resources.filter(r => r.archive);

    // Filter by resource type
    if (selectedResourceType) {
      archived = archived.filter(r => r.resourceType === selectedResourceType);
    }

    // Sort by date
    archived.sort((a, b) => {
      const dateA = a.date ? new Date(a.date) : new Date(0);
      const dateB = b.date ? new Date(b.date) : new Date(0);
      return sortOrder === 'newest' ? dateB - dateA : dateA - dateB;
    });

    const archivedGrid = document.getElementById('archived-resources-grid');
    const archivedSection = document.getElementById('archived-section');
    const archivedCount = document.getElementById('archived-count');

    if (archived.length > 0) {
      archivedSection.classList.remove('hidden');
      archivedCount.textContent = archived.length;

      // Clear and repopulate archived grid
      archivedGrid.innerHTML = '';
      archived.forEach((resource, index) => {
        const card = renderResourceCard(resource);
        card.style.animationDelay = `${index * 150}ms`;
        archivedGrid.appendChild(card);
      });
    } else {
      archivedSection.classList.add('hidden');
    }
  }

  // Initial render
  filterAndSortResources();
  filterAndSortArchivedResources();

  // Event listeners
  categoryFilter.addEventListener('change', () => {
    filterAndSortResources();
    filterAndSortArchivedResources();
  });
  resourceTypeFilter.addEventListener('change', () => {
    filterAndSortResources();
    filterAndSortArchivedResources();
  });
  sortSelect.addEventListener('change', () => {
    filterAndSortResources();
    filterAndSortArchivedResources();
  });
</script>
