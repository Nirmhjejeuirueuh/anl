export async function getStaticPaths() {
  const STRAPI_URL = import.meta.env.STRAPI_URL || 'https://bold-dog-24d9579fdd.strapiapp.com';
  
  try {
    const response = await fetch(`${STRAPI_URL}/api/courses?populate=*`);
    const data = await response.json();
    
    const paths = [];
    const languages = ['en', 'fr']; // Add supported languages
    
    for (const course of data.data || []) {
      for (const lang of languages) {
        paths.push({
          params: {
            lang,
            slug: course.slug
          }
        });
      }
    }
    
    return paths;
  } catch (error) {
    console.error('Error fetching courses for static paths:', error);
    return [];
  }
}

