---
import Base from "@/layouts/Base.astro";
import OurTeam from "@/components/sections/OurTeam.astro";
import CallToAction from "@/components/sections/CallToAction.astro";
import JoinUs from "@/components/sections/JoinUs.astro";
import { generatePaths } from "@/lib/utils/i18nUtils.ts";

export function getStaticPaths() {
  return generatePaths();
}

// Default page data
const pageData = {
  title: "Our Team",
  metaDescription: "Meet the expert team at AgilenLite - consultants, trainers, and professionals dedicated to your Agile and DevOps success.",
