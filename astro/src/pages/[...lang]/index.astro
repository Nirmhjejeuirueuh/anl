---
import Base from "@/layouts/Base.astro";
import { getEntryCTM } from "@/lib/contentParser.astro";
import { generatePaths } from "@/lib/utils/i18nUtils.ts";
import AboutUs from "@/layouts/components/sections/AboutUs.astro";
import Customers from "@/layouts/components/sections/Customers.astro";
import HomeBanner from "@/layouts/components/sections/HomeBanner.astro";
import HowItWorks from "@/layouts/components/sections/HowItWorks.astro";
import BlogSection from "@/layouts/components/sections/BlogSection.astro";
import CallToAction from "@/components/sections/CallToAction.astro";
import Testimonial from "@/layouts/components/sections/TestimonialSection.astro";
import ServicesSection from "@/layouts/components/sections/ServicesSection.astro";
import PortfolioSection from "@/layouts/components/sections/PortfolioSection.astro";
import SpotlightCarousel from "@/layouts/components/sections/SpotlightCarousel.astro";

export function getStaticPaths() {
  return generatePaths();
}

const homepage = await getEntryCTM("homepage", "-index", Astro.currentLocale);
---

<Base {...homepage?.data} homepage={true}>
  <HomeBanner />
  <Customers />
  <AboutUs />
  <ServicesSection content={homepage?.data.servicesSection} />
  <SpotlightCarousel />
  <HowItWorks />
  <Testimonial />
  <CallToAction content={homepage?.data.callToActionSection} />
</Base>
