---
import Base from "@/layouts/Base.astro";
import { getEntryCTM } from "@/lib/contentParser.astro";
import { generatePaths } from "@/lib/utils/i18nUtils.ts";
import handleDraftPage from "@/lib/utils/handleDraftPage";
import BlogListPage from "@/components/BlogListPage.astro";
import PageHeader from "@/components/widgets/PageHeader.astro";
import CallToAction from "@/components/sections/CallToAction.astro";
import config from ".astro/config.generated.json" assert { type: "json" };

export function getStaticPaths() {
  return generatePaths();
}

const { blogFolder } = config.settings;

const postIndex = await getEntryCTM(
  blogFolder as "blog",
  "-index",
  Astro.currentLocale,
);

// Remove drafts pages in production
const response = handleDraftPage(postIndex?.data);
if (response) return response;
---

<Base {...postIndex?.data} fitToScreen={false}>
  <PageHeader {...postIndex?.data} />
  <BlogListPage />
  <CallToAction />
</Base>
